@model User;
@{
    ViewData["Title"] = "User Create Page";
}

<h1>User Create Page</h1>
<form method="post" asp-controller="User" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" >
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" maxlength="200">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary my-2">บันทึก</button>
</form>

